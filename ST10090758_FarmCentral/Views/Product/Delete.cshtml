@using ST10090758_FarmCentral.Database
@model ST10090758_FarmCentral.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this Product?</h1>
<style>
    body {
        background: linear-gradient(to bottom, #ffffff,#e0c0b9, #be8377,#97483a,#6b0000 );
    }
</style>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplyDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplyDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
    </dl>
    

    @if (DBoperations.myUserType.Equals("FARMER"))// used to ensure all data is present when the user returns to the previous page
    {
        <form asp-action="Delete" method="post">
            <input type="submit" value="Delete" class="btn btn-danger my-3" /> |
            <a asp-action="FarmerProduct">Back to Products</a>
        </form>
    }else{
       <form asp-action="Delete" method="post" >
        <input type="submit" value="Delete" class="btn btn-danger my-3"  /> |
        <a asp-action="Product" style="color:white">Back to Products</a>
    </form>
    }
    
</div>
