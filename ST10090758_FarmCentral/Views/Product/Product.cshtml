@model IEnumerable<ST10090758_FarmCentral.Models.Product>
@using ST10090758_FarmCentral.Database;


@{
    ViewData["Title"] = "Product";

}

<h1> Farmer @DBoperations.myName's Products</h1>

<p>
    <a asp-action="Create" style="color: green;">Create New Product</a>
</p>

<h6>Filter by:</h6>
<form asp-action="FilterProduct" method="post">
    <div class="dropdown form-group my-3">
        <button id="dropdownProductType" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Product Type
        </button>
        <ul class="dropdown-menu form-group">
            <li><a class="dropdown-item" href="#" onclick="chosenType('poultry')">poultry</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('meat')">meat</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('dairy')">dairy</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('grains')">grain</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('fruit')">fruit</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('veg')">vegetable</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('other')">other</a></li>
            <li><a class="dropdown-item" href="#" onclick="chosenType('all')">all</a></li>
        </ul>

        <input type="hidden" name="cboProdType" id="storedType" />

        <button asp-action="FilterProduct" type="submit" style="color: white; border-color: black; background-color:green">Filter </button>
    </div>
</form>


<table class="table table-bordered" border="1" bordercolor="#0f0e0e">
    <thead>
        <tr bgcolor="#1b5708">
            <th style="color:white">
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Description)

            </th style="color:white">
            <th style="color:white">

                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.SupplyDate)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplyDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ProductID },new { @class = "colored-edit" }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProductID },new { @class = "colored-details" }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProductID },new { @class = "colored-link" }) |

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function chosenType(type) {
            var dropdownButton = document.getElementById('dropdownProductType');
            dropdownButton.innerText = type;

            var storedTypeInput = document.getElementById('storedType');
            storedTypeInput.value = type;
        }
    </script>

}